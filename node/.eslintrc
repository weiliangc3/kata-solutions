{
    "extends": "airbnb",
    "plugins": [
      "jest"
    ],
    "env": {
      "jest/globals": true,
      "browser": true
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "optionalDependencies": false,
          "peerDependencies": false
        }
      ],
      "jsx-a11y/anchor-is-valid": "off"
    }
  }